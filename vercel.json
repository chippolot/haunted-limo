{
  "routes": [
    {
      "src": "/",
      "dest": "api/index.go"
    },
    {
      "src": "/blunders",
      "dest": "api/blunders.go"
    },
    {
      "src": "/whammies",
      "dest": "api/whammies.go"
    },
    {
      "src": "/hexes",
      "dest": "api/hexes.go"
    },
    {
      "src": "/miscreants",
      "dest": "api/miscreants.go"
    }
  ],
  "functions": {
    "api/*.go": {
      "includeFiles": "data/templates/*.gohtml"
    }
  },
  "crons": [
    {
      "path": "/api/cron.go",
      "schedule": "0 0 * * *"
    }
  ]
}